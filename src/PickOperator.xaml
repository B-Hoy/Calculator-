<Window x:Class="Calculator_.src.PickOperator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_.src"
        mc:Ignorable="d"
        SizeToContent="Height"
        Width="250"
        Title="Pick Operator">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center" FontWeight="SemiBold" Content="Select Operator"></Label>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <ComboBox x:Name="OperatorSelector" Margin="5" SelectionChanged="OperatorSelector_SelectionChanged" Width="100">
                <ComboBoxItem Content="x"/>
                <ComboBoxItem Content="/"/>
                <ComboBoxItem Content="%"/>
                <ComboBoxItem Content="x²"/>
                <ComboBoxItem Content="√x"/>
            </ComboBox>
            <Button x:Name="PurchaseButton" Content="Purchase" Margin="5" IsEnabled="False" Click="PurchasePressed"/>
        </StackPanel>
    </Grid>
</Window>